{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["esnext"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "src",
    "esModuleInterop": true,
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
